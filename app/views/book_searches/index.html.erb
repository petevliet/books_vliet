<% if params[:search].present? %>
  <h1>Search results for '<%= @query %>' </h1>
<% else %>
  <h1>Book Search</h1>
<% end %>

<%= form_tag '/', method: :get do %>
  <%= label_tag 'search' %>
  <%= text_field_tag :search %>
  <%= submit_tag %>
<% end %>

<% if params[:search].present? %>
  <ul>
    <% @books_final.each do |book| %>
      <li> <%= book %> </li>
    <% end %>
  </ul>
<% end %>
